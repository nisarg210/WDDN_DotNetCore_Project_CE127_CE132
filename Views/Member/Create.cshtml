@model BookBorrow.Models.Member
@{
    ViewData["Title"] = "Create";
}

<h1>@(Model.MemberId!=0 ? "Update" : "Create")</h1>

<form class="mt-3" asp-controller="Member" asp-action=@(Model.MemberId!=0 ? "Update" : "Create") asp-route-value="@Model.MemberId">
    @if (Model.MemberId != 0)
    {
        <input type="hidden" class="form-control" asp-for="MemberId" placeholder="Id"/>
    }
    <div class="form-group row">
        <label asp-for="MemberName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MemberName" class="form-control" placeholder="Name">
            <span asp-validation-for="MemberName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MobileNumber" class="form-control" placeholder="Mobile No">
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Pincode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Pincode" class="form-control" placeholder="Pincode">
            <span asp-validation-for="Pincode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="State" class="form-control" placeholder="State">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DOB" class="form-control" placeholder="dd-mm-yyy">
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">@(Model.MemberId!=0 ? "Update" : "Create")</button>
        </div>
    </div>
</form>

